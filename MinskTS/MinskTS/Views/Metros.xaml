<Page
    x:Class="MinskTS.Views.Metros"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled">

        <Grid.RowDefinitions>
            <RowDefinition Height="257*"></RowDefinition>
            <RowDefinition Height="103*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/assets/metro.png" MinWidth="100" MinHeight="100"  />
        <TextBlock  Grid.Row="1"  x:Name="bloText"      FontSize="26"  VerticalAlignment="Center" HorizontalAlignment="Center" />

    </Grid>
</Page>
